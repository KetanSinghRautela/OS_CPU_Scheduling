#include<stdio.h>
#include<unistd.h>
#include<sys/types.h>
#include<sys/wait.h>
int main()
  {
 	int fd[2],n,p;
	char buffer[50];
 	pipe(fd);
 	p=fork();
 	//parent process
 	if(p>0)
 	{
 		printf("\nPassing Values to child id=%d\n",getpid());
 		write(fd[1],"HELLO WORLD\n",10);  //file descriptor is the place where you want to send the data.
  	}
 	else
 	{
 		printf("\n Child received the data is=%d\n",getpid());
 		n=read (fd[0],buffer,50);//reading from buffer with the size 50.
 		write(1,buffer,n);   //printing to screen the amount of data from the buffer with size n.
    }
  		return 0;
 }
